        {
            "before": [
                "t",
                "["
            ],
            "commands": [
                "workbench.action.moveEditorToPreviousGroup"
            ]
        },
        {
            "before": [
                "t",
                "]"
            ],
            "commands": [
                "workbench.action.moveEditorToNextGroup"
            ]
        },
        {
            "before": [
                "<enter>",
            ],
            "commands": [
                "editor.action.smartSelect.expand"
            ],
            "when": [
                "editorTextFocus"
            ]
        }
    ],
    "vim.visualModeKeyBindingsNonRecursive": [
        {
            "before": [
                "<enter>",
            ],
            "commands": [
                "editor.action.smartSelect.expand"
            ],
            "when": [
                "editorTextFocus"
            ]
        },
        {
            "before": [
                "L",
            ],
            "after": [
                "$",
                "h"
            ]
        },
        {
            "before": [
                "<leader>",
                "t"
            ],
            "commands": [
                "extension.translate"
            ]
        },
    ],
