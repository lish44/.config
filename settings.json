{
    "editor.fontSize": 15,
    "editor.fontFamily": "Menlo, Monaco",
    "editor.lineNumbers": "relative",
    "csharp.referencesCodeLens.enabled": true,
    "explorer.confirmDelete": false,
    "editor.renderWhitespace": "trailing",
    "update.showReleaseNotes": false,
    "update.mode": "none",
    "editor.formatOnSave": true,
    "omnisharp.useEditorFormattingSettings": true,
    "editor.minimap.enabled": true,
    "extensions.autoUpdate": false,
    "editor.smoothScrolling": false,
    "editor.wordWrap": "on",
    // "editor.cursorSmoothCaretAnimation": true,
    //---------------vim----------------
    "vim.enableNeovim": true,
    "vim.neovimPath": "/usr/local/Cellar/neovim/0.6.1/bin/nvim", // 每次升级会更新版本号所以制作替身
    // "vim.neovimPath": "nvim", //软链接放在同json根目录下 
    "vim.vimrc.enable": true,
    "vim.vimrc.path": "$HOME/.config/nvim/init.vim",
    "vim.leader": " ",
    // "vim.sneak": true,
    "vim.sneakReplacesF": true,
    "vim.searchHighlightColor": "#f1c40f",
    "vim.searchHighlightTextColor": "#000",
    // "vim.surround": true,
    // "vim.foldfix": true,
    // "vim.easymotion": true,
    "vim.hlsearch": true,
    "vim.handleKeys": {
        "<C-e>": false,
        "<C-f>": false,
        "]": false,
        "[": false,
    },
    "vim.insertModeKeyBindingsNonRecursive": [
        {
            "before": [
                "<C-j>"
            ],
            "after": [
                "<down>"
            ]
        },
        {
            "before": [
                "<C-i>"
            ],
            "after": [
                "<up>"
            ]
        },
    ],
    "vim.normalModeKeyBindingsNonRecursive": [
        {
            "before": [
                "<C-l>"
            ],
            "after": [
                "f",
                ">"
            ]
        },
        {
            "before": [
                "t",
                "m"
            ],
            "commands": [
                "workbench.action.joinAllGroups"
            ]
        },
        // {
        //     "before": [
        //         "<tab>"
        //         // "<c-]>"
